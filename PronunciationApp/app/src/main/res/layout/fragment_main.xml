<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_row_topic_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgIconTopicSound"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="5dp"
            android:src="@drawable/sound"
            android:layout_marginLeft="@dimen/icon_margin_left" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgIconTopicSound"
            android:layout_alignBottom="@id/imgIconTopicSound">

            <TextView
                android:id="@+id/textview_topic_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/text_view_topic_padding"
                android:text="Sound"
                android:textSize="30sp"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_row_double_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgIcondouble_sound"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="5dp"
            android:src="@drawable/double_ai"
            android:layout_marginLeft="@dimen/icon_margin_left" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgIcondouble_sound"
            android:layout_alignBottom="@id/imgIcondouble_sound">

            <TextView
                android:id="@+id/textview_double_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/text_view_topic_padding"
                android:text="Double Vowel Sounds"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:id="@+id/textview_lesson_done_double_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textview_double_sound"
                android:text="0/8  DONE"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_row_single_vowel_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgIcon_single_vowel_sound"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="5dp"
            android:src="@drawable/voice_long_i"
            android:layout_marginLeft="@dimen/icon_margin_left" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgIcon_single_vowel_sound"
            android:layout_alignBottom="@id/imgIcon_single_vowel_sound">

            <TextView
                android:id="@+id/textview_single_vowel_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/text_view_topic_padding"
                android:text="Single Vowel Sounds"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:id="@+id/textview_lesson_done_single_vowel_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textview_single_vowel_sound"
                android:text="0/12  DONE"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_row_voiced_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgIcon_voiced_sound"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="5dp"
            android:src="@drawable/consonant_b"
            android:layout_marginLeft="@dimen/icon_margin_left" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgIcon_voiced_sound"
            android:layout_alignBottom="@id/imgIcon_voiced_sound">

            <TextView
                android:id="@+id/textview_voiced_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/text_view_topic_padding"
                android:text="Voiced Consonant Sounds"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:id="@+id/textview_lesson_done_voiced_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textview_voiced_sound"
                android:text="0/16  DONE"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_row_unvoiced_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgIcon_unvoiced_sound"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="5dp"
            android:src="@drawable/consonant_p"
            android:layout_marginLeft="@dimen/icon_margin_left" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgIcon_unvoiced_sound"
            android:layout_alignBottom="@id/imgIcon_unvoiced_sound">

            <TextView
                android:id="@+id/textview_unvoiced_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="@dimen/text_view_topic_padding"
                android:text="Unvoiced Consonant Sounds"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:id="@+id/textview_lesson_done_unvoiced_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textview_unvoiced_sound"
                android:text="0/8  DONE"
                android:textSize="@dimen/text_view_topic_size"
                android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                android:gravity="center|left"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/layout_row_topic_stress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgIconTopicStress"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/intonation"
                android:layout_marginLeft="@dimen/icon_margin_left" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgIconTopicStress"
                android:layout_alignBottom="@id/imgIconTopicStress">

                <TextView
                    android:id="@+id/textview_topic_stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/text_view_topic_padding"
                    android:text="Other Lesson"
                    android:textSize="30sp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_row_textview_syllable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgIcon_syllable"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/syllable"
                android:layout_marginLeft="@dimen/icon_margin_left" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgIcon_syllable"
                android:layout_alignBottom="@id/imgIcon_syllable">

                <TextView
                    android:id="@+id/textview_syllable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/text_view_topic_padding"
                    android:text="Syllable"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/textview_lesson_done_syllable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textview_syllable"
                    android:text="0/1  DONE"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_row_word_stress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgIcon_word_stress"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/word_stress"
                android:layout_marginLeft="@dimen/icon_margin_left" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgIcon_word_stress"
                android:layout_alignBottom="@id/imgIcon_word_stress">

                <TextView
                    android:id="@+id/textview_word_stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/text_view_topic_padding"
                    android:text="Word Stress"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/textview_lesson_done_word_stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textview_word_stress"
                    android:text="0/1  DONE"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_row_sentence_stress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgIcon_sentence_stress"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/sentence_stress"
                android:layout_marginLeft="@dimen/icon_margin_left" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgIcon_sentence_stress"
                android:layout_alignBottom="@id/imgIcon_sentence_stress">

                <TextView
                    android:id="@+id/textview_sentence_stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/text_view_topic_padding"
                    android:text="Sentence Stress"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/textview_lesson_done_sentence_stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textview_sentence_stress"
                    android:text="0/1  DONE"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"/>

            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_row_linking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgIcon_linking"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/linking_word"
                android:layout_marginLeft="@dimen/icon_margin_left" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgIcon_linking"
                android:layout_alignBottom="@id/imgIcon_linking">

                <TextView
                    android:id="@+id/textview_linking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/text_view_topic_padding"
                    android:text="Linking"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
                <TextView
                    android:id="@+id/textview_lesson_done_linking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textview_linking"
                    android:text="0/1  DONE"
                    android:textSize="@dimen/text_view_topic_size"
                    android:layout_marginLeft="@dimen/text_view_lesson_done_margin_left"
                    android:gravity="center|left"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>