<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_view_practice"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/practice_header"/>
    <FrameLayout
        android:id="@+id/fr_practice_sound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fr_practice_sound_margin_top"
        android:layout_below="@+id/practice_header">
    </FrameLayout>
    <Button
        android:id="@+id/image_right_answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/light_green_banner2"
        android:text="You right!"
        android:gravity="center"
        android:padding="15dp"
        android:alpha="0.7"
        android:visibility="gone"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/image_wrong_answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/red_banner"
        android:text="You wrong!"
        android:gravity="center"
        android:padding="15dp"
        android:alpha="0.8"
        android:visibility="gone"
        android:textAllCaps="false"
        />

</FrameLayout>